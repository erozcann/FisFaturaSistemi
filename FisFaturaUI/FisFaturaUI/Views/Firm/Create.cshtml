@model FisFaturaUI.Models.CreateFirmViewModel

@{ ViewData["Title"] = "Yeni Firma Oluştur"; }

<style>
    .firma-create-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .firma-create-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #f8f9fa;
    }
    
    .firma-create-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .firma-create-subtitle {
        color: #6c757d;
        font-size: 1rem;
    }
    
    .firma-create-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        border: 1px solid #e9ecef;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        display: block;
    }
    
    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        background: #fff;
    }
    
    .btn-create {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        margin-right: 1rem;
    }
    
    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        color: white;
    }
    
    .btn-back {
        background: #6c757d;
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-back:hover {
        background: #5a6268;
        color: white;
        transform: translateY(-1px);
    }
    
    .alert {
        border-radius: 8px;
        border: none;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .alert-danger {
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        border-left: 4px solid #dc3545;
    }
    
    .alert-info {
        background: linear-gradient(135deg, #d1ecf1, #bee5eb);
        color: #0c5460;
        border-left: 4px solid #17a2b8;
    }
    
    .input-group {
        position: relative;
    }
    
    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 10;
    }
    
    .input-with-icon {
        padding-left: 2.5rem;
    }
    
    .validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="firma-create-container">
    <div class="firma-create-header">
        <h1 class="firma-create-title">
            <i class="fas fa-plus-circle me-2"></i>
            Yeni Firma Oluştur
        </h1>
        <p class="firma-create-subtitle">Yeni bir firma ekleyerek fatura işlemlerinizi başlatın</p>
    </div>

    <div class="firma-create-card">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @ViewBag.ErrorMessage
            </div>
        }

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                @TempData["Message"]
            </div>
        }

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FirmaAdi" class="form-label">
                    <i class="fas fa-building me-1"></i>
                    Firma Adı
                </label>
                <div class="input-group">
                    <i class="fas fa-building input-icon"></i>
                    <input asp-for="FirmaAdi" class="form-control input-with-icon" placeholder="Firma adını girin" />
                </div>
                <span asp-validation-for="FirmaAdi" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="VergiNo" class="form-label">
                    <i class="fas fa-id-card me-1"></i>
                    Vergi Numarası
                </label>
                <div class="input-group">
                    <i class="fas fa-id-card input-icon"></i>
                    <input asp-for="VergiNo" class="form-control input-with-icon" placeholder="Vergi numarasını girin" />
                </div>
                <span asp-validation-for="VergiNo" class="validation-error"></span>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-create">
                    <i class="fas fa-save me-2"></i>
                    Firma Oluştur
                </button>
                <a asp-action="Firmalarim" asp-controller="Dashboard" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>
                    Geri Dön
                </a>
            </div>
        </form>
    </div>
</div> 